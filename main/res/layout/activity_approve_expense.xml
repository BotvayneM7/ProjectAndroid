<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background">

    <!-- Title -->
    <TextView
        android:id="@+id/approve_expense_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Approval Requests"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="24dp" />

    <!-- Placeholder for the list of expenses needing approval -->
    <ListView
        android:id="@+id/expenseListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"
        android:background="@android:color/white" />

    <!-- Buttons to approve or decline -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Approve Button -->
        <Button
            android:id="@+id/btnApprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approve"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/green" />

        <!-- Decline Button -->
        <Button
            android:id="@+id/btnDecline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decline"
            android:backgroundTint="@color/red" />

        <TextView
            android:id="@+id/expenseDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense details will appear here"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="23dp"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>
